<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiashuwu.neurograph.WelcomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/welcome_activity_icon"
            android:src="@drawable/icon_new_ps_transparent"
            />

        <!-- TODO ICON -->

        <TextView
            android:id="@+id/welcome_activity_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/welcome_activity_bottom_date"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="@string/welcome_activity_bottom_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcome_activity_bottom_date"
            android:text= "@string/welcome_activity_bottom_date"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
